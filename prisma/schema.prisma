generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produc {
  id         Int      @id @default(autoincrement())
  name       String
  price      Int
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}

model Category {
  id     Int      @id @default(autoincrement())
  name   String
  image  String
  produc Produc[]
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  password String
  status   String @default("No activited")
  phone    String
}

model Session {
  id      Int    @id @default(autoincrement())
  user_id Int
  ip      String
  device  String
}
